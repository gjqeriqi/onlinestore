<body>
    <h3 class="text-center mt-5">Register product</h3>
    <div class="container mt-5">
        <div style="margin:auto; width: 60%;">
            <form action="/admin/shtoProdukt" method="POST" >
                <input type="text" name="emri" placeholder="Emri produktit" class="form-control"> <br>
                <textarea name="pershkrimi" cols="30" rows="5" class="form-control" placeholder="Pershkrimi"></textarea><br>
                <input type="number" name="qmimi" placeholder="Qmimi" class="form-control"><br>
                <input type="number" name="sasia" class="form-control" placeholder="Sasia"><br>
                <input type="text" name="kategoria" placeholder="Kategoria" class="form-control"><br>
                <input type="text" name="ngjyra" class="form-control" placeholder="Ngjyra"><br>
                <input type="text" name="gjinia" class="form-control" placeholder="Gjinia"><br>
                <input type="text" name="img" class="form-control" placeholder="Foto"><br>
                <div class="text-center ">
                    <button type="submit" style="width:30%" class="btn btn-info ">Regjistro</button>
                </div>
            </form>
        </div>
    </div>
